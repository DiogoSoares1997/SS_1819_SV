clear all
close all

%% 4 periodos de sinal exercicio 1 a)

%%i)
A = 6;
B = 2;
C = 8;
f0 = 500;
alpha = -pi;
dur = 1/f0;
fs = 8000;
ts = 1/fs;
t = 0:ts:4*dur;

%[z] = my_sinc(A,B,C,t);
[x,y] = my_sinusoid(A,B,f0,t,alpha);

figure (1)

plot (t,x)
title('Sinal x(t) com A=6; B=2; C=8 ; fo=500 e ?=-?');
xlabel('Tempo (t) em segundos');
ylabel('Amplitude (A)');
figure (2)
plot (t,y)
title('Sinal y(t) com A=6; B=2; C=8 ; fo=500 e ?=-?');
xlabel('Tempo (t) em segundos');
ylabel('Amplitude (A)');
